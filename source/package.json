{
  "name": "keycloak-on-aws",
  "scripts": {
    "test": "rm -fr lib && npm run test:compile && jest --passWithNoTests --all --updateSnapshot && eslint",
    "build": "npm run test && npm run synth",
    "bump": "standard-version -i ../CHANGELOG.md",
    "test:watch": "jest --watch",
    "test:update": "jest --updateSnapshot",
    "test:compile": "tsc --noEmit --project tsconfig.jest.json",
    "watch": "tsc -w",
    "eslint": "eslint --ext .ts,.tsx --fix --no-error-on-unmatched-pattern src test",
    "cdk": "cdk",
    "diff": "cdk diff",
    "synth": "cdk synth",
    "deploy": "cdk deploy",
    "destroy": "cdk destroy"
  },
  "devDependencies": {
    "@types/jest": "^27",
    "@types/node": "^16",
    "@typescript-eslint/eslint-plugin": "^6",
    "@typescript-eslint/parser": "^6",
    "eslint": "^8",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.28.1",
    "jest": "^27",
    "jest-junit": "^15",
    "json-schema": "^0.4.0",
    "path-parse": "1.0.7",
    "standard-version": "^9",
    "trim-newlines": "4.0.2",
    "ts-jest": "^27",
    "ts-node": "10.8.1",
    "typescript": "4.9.5"
  },
  "dependencies": {
    "aws-cdk-lib": "2.100.0",
    "constructs": "10.0.5",
    "cdk-bootstrapless-synthesizer": "2.3.2",
    "cdk-keycloak": "2.8.1"
  },
  "bundledDependencies": [],
  "license": "Apache-2.0",
  "version": "2.1.0",
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-reports"
        }
      ]
    ],
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.jest.json"
      }
    }
  }
}